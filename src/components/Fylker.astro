---
const response = await fetch('https://opensheet.elk.sh/1c0GORGfO4BWbS5y2lrZTmyUWMv47_ggGCG-eTKJ1GJw/Fylker');
const data = await response.json();
---
<h2 class="text-2xl my-4">Fylker</h2>
<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 flex-wrap mb-16">
  {data.map(d =>
  <div class="flex border-2 p-4 gap-4 rounded-md">
    <img class="flex-shrink-0 w-16" src=`https://raw.githubusercontent.com/aprestmo/norske-fylkes-kommunevaapen/master/fylker/${d.id}.svg` alt={d.name_nb} loading="lazy">
    <div class="flex flex-col">
      <h2 class="font-bold">{d.name_nb}</h2>
      <dl class="grid gap-1 grid-cols-2">
        <dt>Fylkesnummer:</dt>
        <dd>{d.id}</dd>
        <dt>Nettsted:</dt>
        <dd>
          <a href=`https://${d.url}` target="_blank">{d.url}</a>
        </dd>
      </dl>
    </div>
  </div>
  )}
</div>
